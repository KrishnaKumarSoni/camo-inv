{
  "version": 2,
  "buildCommand": "npm ci --no-audit --no-fund && npm run build",
  "outputDirectory": "build",
  "installCommand": "npm ci --no-audit --no-fund",
  "env": {
    "CI": "false",
    "GENERATE_SOURCEMAP": "false"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}