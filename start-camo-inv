#!/bin/bash

# Camorent Inventory Onboarding App - Start Script
# This script starts both the React frontend and Flask backend

echo "ğŸš€ Starting Camorent Inventory Onboarding App..."

# Check if required files exist
if [ ! -f "package.json" ]; then
    echo "âŒ Error: package.json not found. Are you in the correct directory?"
    exit 1
fi

if [ ! -f ".env" ]; then
    echo "âŒ Error: .env file not found. Please ensure environment variables are configured."
    exit 1
fi

if [ ! -f "camo-inv-firebase-adminsdk-fbsvc-5b5eec8f64.json" ]; then
    echo "âŒ Error: Firebase service account JSON not found."
    exit 1
fi

# Function to check if port is in use
check_port() {
    local port=$1
    if lsof -Pi :$port -sTCP:LISTEN -t >/dev/null ; then
        return 0
    else
        return 1
    fi
}

# Function to kill process on port
kill_port() {
    local port=$1
    local pid=$(lsof -Pi :$port -sTCP:LISTEN -t)
    if [ ! -z "$pid" ]; then
        echo "ğŸ”ª Killing process on port $port (PID: $pid)"
        kill -9 $pid
    fi
}

echo "ğŸ§¹ Cleaning up any existing processes..."
kill_port 3001
kill_port 5000

# Create logs directory
mkdir -p logs

echo "ğŸ Starting Flask API backend on port 5000..."
cd api
echo "Activating virtual environment..."
source venv/bin/activate

echo "Installing Python dependencies..."
pip install -r requirements.txt > ../logs/backend-install.log 2>&1

echo "Starting Flask application..."
python app.py > ../logs/backend.log 2>&1 &
BACKEND_PID=$!
echo $BACKEND_PID > ../logs/backend.pid

cd ..

# Wait for backend to start
sleep 3

echo "âš›ï¸  Starting React frontend on port 3001..."
PORT=3001 npm start > logs/frontend.log 2>&1 &
FRONTEND_PID=$!
echo $FRONTEND_PID > logs/frontend.pid

# Wait for services to start
sleep 2

# Check if services are running
if check_port 5000; then
    echo "âœ… Backend API running on http://localhost:5000"
else
    echo "âŒ Backend failed to start on port 5000"
    exit 1
fi

if check_port 3001; then
    echo "âœ… Frontend running on http://localhost:3001"
else
    echo "âŒ Frontend failed to start on port 3001"
    exit 1
fi

echo ""
echo "ğŸ‰ Camorent Inventory App is starting up!"
echo "ğŸ“± Open http://localhost:3001 in your browser"
echo "ğŸ”§ API available at http://localhost:5000"
echo ""
echo "ğŸ“‹ To stop the application, run: ./stop-camo-inv"
echo "ğŸ“Š Check logs in the 'logs' directory if you encounter issues"
echo ""
echo "ğŸ”‘ Default test login (if no users exist):"
echo "   Email: test@camorent.com"
echo "   Password: test123"
echo ""
echo "ğŸ’¡ Press Ctrl+C to stop watching logs (app will continue running)"
echo "ğŸ“„ Watching application logs..."
echo "----------------------------------------"
echo ""

# Follow logs
tail -f logs/frontend.log logs/backend.log